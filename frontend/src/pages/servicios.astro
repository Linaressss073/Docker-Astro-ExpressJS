---
import Layout from '../layouts/Base.astro';

const seo = {
  title: 'Nuestros Servicios | Hotel Paraíso',
  description: 'Descubre la amplia gama de servicios que ofrecemos en Hotel Paraíso para hacer tu estadía inolvidable.',
};

const servicios = [
  {
    nombre: 'Restaurante Gourmet "El Mirador"',
    descripcion: 'Disfruta de una experiencia culinaria excepcional con vistas panorámicas. Ofrecemos cocina local e internacional preparada por chefs de renombre.',
    imagen: '/assets/images/servicios/restaurante.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Desayuno: 7am - 10am, Almuerzo: 12pm - 3pm, Cena: 7pm - 11pm',
  },
  {
    nombre: 'Spa y Bienestar "Oasis Sereno"',
    descripcion: 'Relájate y rejuvenece en nuestro spa de clase mundial. Ofrecemos masajes, tratamientos faciales, sauna, y piscina de hidroterapia.',
    imagen: '/assets/images/servicios/spa.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Lunes a Domingo: 9am - 8pm (Se requiere reserva previa)',
  },
  {
    nombre: 'Gimnasio Moderno',
    descripcion: 'Mantente en forma durante tu estadía con nuestro gimnasio completamente equipado con máquinas cardiovasculares y de pesas de última generación.',
    imagen: '/assets/images/servicios/gimnasio.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Abierto 24/7 para huéspedes',
  },
  {
    nombre: 'Servicio de Habitaciones 24/7',
    descripcion: 'Disfruta de deliciosas comidas y bebidas en la comodidad de tu habitación, disponible a cualquier hora del día o de la noche.',
    imagen: '/assets/images/servicios/room-service.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Disponible 24 horas',
  },
  {
    nombre: 'Salones para Eventos y Conferencias',
    descripcion: 'Espacios versátiles y equipados para tus reuniones de negocios, conferencias, bodas y celebraciones especiales. Contamos con soporte audiovisual y catering.',
    imagen: '/assets/images/servicios/eventos-salon.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Consultar disponibilidad y reservar',
  },
  {
    nombre: 'Wi-Fi de Alta Velocidad Gratuito',
    descripcion: 'Mantente conectado con nuestro servicio de Wi-Fi de alta velocidad disponible en todas las áreas del hotel, sin costo adicional.',
    imagen: '/assets/images/servicios/wifi.jpg', // Reemplaza con la ruta a tu imagen
    horario: 'Disponible 24 horas',
  }
];
---
<Layout seo={seo}>
  <div class="page-container services-page">
    <header class="page-header text-center">
      <h1>Nuestros Servicios</h1>
      <p class="subtitle">En Hotel Paraíso, nos dedicamos a ofrecerte una experiencia excepcional con una variedad de servicios diseñados para tu confort y disfrute.</p>
    </header>

    <div class="services-grid">
      {servicios.map(servicio => (
        <div class="service-card">
          <img src={servicio.imagen} alt={`Imagen de ${servicio.nombre}`} class="service-card__image" loading="lazy"/>
          <div class="service-card__content">
            <h3>{servicio.nombre}</h3>
            <p class="service-card__description">{servicio.descripcion}</p>
            {servicio.horario && <p class="service-card__schedule"><strong>Horario:</strong> {servicio.horario}</p>}
            <!-- Podrías añadir un enlace para más detalles o reservas si es aplicable -->
            <!-- <a href={`/servicios/${servicio.nombre.toLowerCase().replace(/\s+/g, '-')}`} class="btn-primary">Más Información</a> -->
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .services-page {
    padding: 2rem 1rem; /* Ajuste para móviles */
  }
  .page-header.text-center {
    text-align: center;
    margin-bottom: 3rem;
  }
  .page-header h1 {
    font-size: var(--font-size-xxl, 2.5rem); /* Ajusta según tu sistema de fuentes */
    color: var(--theme-primary, #007bff);
    margin-bottom: 0.5rem;
  }
  .subtitle {
    font-size: var(--font-size-md-lg, 1.125rem);
    color: var(--theme-on-surface-2, #555);
    max-width: 700px;
    margin: 0 auto 1rem;
  }
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  .service-card {
    background-color: var(--theme-surface-1, #fff);
    border-radius: var(--theme-shape-radius-lg, 8px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }
  .service-card__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  .service-card__content {
    padding: 1.5rem;
    flex-grow: 1; /* Para que el contenido ocupe el espacio restante */
  }
  .service-card h3 {
    font-size: var(--font-size-lg, 1.5rem);
    color: var(--theme-primary-dark, #0056b3); /* Un tono más oscuro para el título de la tarjeta */
    margin-top: 0;
    margin-bottom: 0.75rem;
  }
  .service-card__description {
    font-size: var(--font-size-sm-md, 0.95rem); /* Un poco más pequeño */
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  .service-card__schedule {
    font-size: var(--font-size-sm, 0.875rem);
    color: var(--theme-on-surface-3, #777); /* Un color más tenue */
  }
  /* Estilos para el botón si decides añadirlo */
  /* .service-card .btn-primary { ... } */
</style>